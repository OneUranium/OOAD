<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding><Insets bottom="30.0" left="30.0" right="30.0" top="30.0" /></padding>

        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Create Customer Account" />

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label prefWidth="120.0" text="Customer Type" />
            <ComboBox fx:id="customerTypeCombo" prefWidth="200.0" />
        </HBox>

        <!-- Individual Customer Fields -->
        <VBox fx:id="individualBox" spacing="10.0">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label prefWidth="120.0" text="First Name" />
                <TextField fx:id="customerNameField" prefWidth="200.0" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label prefWidth="120.0" text="Last Name" />
                <TextField fx:id="customerSurnameField" prefWidth="200.0" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label prefWidth="120.0" text="Email Address" />
                <TextField fx:id="emailAddressField" prefWidth="200.0" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label prefWidth="120.0" text="Address" />
                <TextField fx:id="customerAddressField" prefWidth="200.0" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label prefWidth="120.0" text="Employment Info" />
                <TextField fx:id="employmentInfoField" prefWidth="200.0" />
            </HBox>
        </VBox>

        <!-- Company Customer Fields -->
        <VBox fx:id="companyBox" spacing="10.0" visible="false">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label prefWidth="120.0" text="Company Name" />
                <TextField fx:id="companyNameField" prefWidth="200.0" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label prefWidth="120.0" text="Registration Number" />
                <TextField fx:id="registrationNumberField" prefWidth="200.0" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label prefWidth="120.0" text="Email Address" />
                <TextField fx:id="companyEmailAddressField" prefWidth="200.0" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label prefWidth="120.0" text="Company Address" />
                <TextField fx:id="companyCustomerAddressField" prefWidth="200.0" />
            </HBox>
        </VBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="15.0">
            <Button fx:id="createButton" text="Create Account" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120;"/>
            <Button fx:id="returnButton" text="ðŸ”™ Return to Login" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 140;"/>
            <Button fx:id="cancelButton" text="Cancel" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 80;"/>
        </HBox>

        <Label fx:id="messageLabel" style="-fx-text-fill: red;" text="" />
    </VBox>
</AnchorPane>