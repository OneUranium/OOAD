<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" style="-fx-background-color: #f8f9fa;">
        <padding><Insets bottom="40.0" left="40.0" right="40.0" top="40.0" /></padding>

        <Label text="Banking System" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <Label text="Please login to continue" style="-fx-text-fill: #7f8c8d;" />

        <VBox spacing="15.0" style="-fx-padding: 20; -fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
            <VBox spacing="5.0">
                <Label text="Username" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <TextField fx:id="usernameField" promptText="Enter your username" />
            </VBox>

            <VBox spacing="5.0">
                <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <PasswordField fx:id="passwordField" promptText="Enter your password" />
            </VBox>

            <Button fx:id="loginButton" text="Login" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 100;" />

            <Label fx:id="messageLabel" style="-fx-font-weight: bold;" />

            <HBox alignment="CENTER" spacing="5.0">
                <Label text="Don't have an account?" style="-fx-text-fill: #7f8c8d;" />
                <Hyperlink fx:id="registerLink" text="Register here" />
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>