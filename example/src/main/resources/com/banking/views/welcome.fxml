<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="500.0">
    <center>
        <VBox alignment="CENTER" spacing="25.0" style="-fx-background-color: #f8f9fa;">
            <padding><Insets top="50.0" right="50.0" bottom="50.0" left="50.0"/></padding>

            <Label text="âœ…" style="-fx-font-size: 48;"/>

            <VBox alignment="CENTER" spacing="5.0">
                <Label text="Welcome to Our Bank!" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label text="Registration completed successfully" style="-fx-font-size: 16; -fx-text-fill: #27ae60;"/>
            </VBox>

