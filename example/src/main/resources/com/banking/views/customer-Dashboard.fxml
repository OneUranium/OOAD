<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="800.0">
    <top>
        <VBox style="-fx-background-color: #2c3e50;">
            <padding><Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/></padding>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Label text="Personal Banking" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>
                <Label fx:id="welcomeLabel" text="Welcome, Customer!" style="-fx-text-fill: white; -fx-font-size: 14;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="returnToWelcomeButton" text="Back to Welcome" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 140;"/>
                <Button fx:id="logoutButton" text="Logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 100;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <!-- Welcome Tab -->
            <Tab text="Welcome">
                <VBox spacing="25.0" alignment="CENTER">
                    <padding><Insets top="40.0" right="40.0" bottom="40.0" left="40.0"/></padding>
                    <Label text="What would you like to do today?" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <HBox spacing="20.0" alignment="CENTER">
                        <VBox spacing="10.0" alignment="CENTER">
                            <Button fx:id="goToDepositButton" text="Make a Deposit" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180; -fx-pref-height: 60;"/>
                            <Label text="Add money to your account" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;"/>
                        </VBox>
                        <VBox spacing="10.0" alignment="CENTER">
                            <Button fx:id="goToWithdrawButton" text="Make a Withdrawal" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180; -fx-pref-height: 60;"/>
                            <Label text="Take money from your account" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;"/>
                        </VBox>
                        <VBox spacing="10.0" alignment="CENTER">
                            <Button fx:id="goToHistoryButton" text="View History" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180; -fx-pref-height: 60;"/>
                            <Label text="See your transaction history" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;"/>
                        </VBox>
                    </HBox>

                    <VBox spacing="10.0" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 20; -fx-background-color: #ecf0f1;">
                        <Label text="Your Accounts" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <HBox spacing="30.0" alignment="CENTER">
                            <VBox spacing="5.0" alignment="CENTER">
                                <Label text="Savings Account" style="-fx-font-weight: bold;"/>
                                <Label fx:id="savingsBalanceLabel" text="$1,250.00" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
                            </VBox>
                            <VBox spacing="5.0" alignment="CENTER">
                                <Label text="Investment Account" style="-fx-font-weight: bold;"/>
                                <Label fx:id="investmentBalanceLabel" text="$5,000.00" style="-fx-text-fill: #e67e22; -fx-font-weight: bold;"/>
                            </VBox>
                            <VBox spacing="5.0" alignment="CENTER">
                                <Label text="Total Balance" style="-fx-font-weight: bold;"/>
                                <Label fx:id="totalBalanceLabel" text="$6,250.00" style="-fx-text-fill: #2c3e50; -fx-font-size: 16; -fx-font-weight: bold;"/>
                            </VBox>
                        </HBox>
                    </VBox>
                </VBox>
            </Tab>

            <!-- Deposit Tab -->
            <Tab text="Deposit">
                <VBox spacing="15.0">
                    <padding><Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/></padding>
                    <Label text="Make a Deposit" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <VBox spacing="10.0">
                        <Label text="Select Account:" style="-fx-font-weight: bold;"/>
                        <ComboBox fx:id="depositAccountCombo" prefWidth="200.0"/>
                        <Label text="Amount:" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="depositAmountField" promptText="Enter amount" prefWidth="200.0"/>
                        <Label fx:id="depositBalanceLabel" text="Current Balance: $0.00" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
                    </VBox>
                    <HBox spacing="10.0">
                        <Button fx:id="processDepositButton" text="Process Deposit" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150;"/>
                        <Button fx:id="backToWelcomeFromDeposit" text="Back to Welcome" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150;"/>
                    </HBox>
                    <TextArea fx:id="depositResultArea" prefHeight="100.0" prefWidth="500.0" editable="false" style="-fx-border-color: #bdc3c7; -fx-padding: 5;"/>
                </VBox>
            </Tab>

            <!-- Withdraw Tab -->
            <Tab text="Withdraw">
                <VBox spacing="15.0">
                    <padding><Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/></padding>
                    <Label text="Make a Withdrawal" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <VBox spacing="10.0">
                        <Label text="Select Account:" style="-fx-font-weight: bold;"/>
                        <ComboBox fx:id="withdrawAccountCombo" prefWidth="200.0"/>
                        <Label text="Amount:" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="withdrawAmountField" promptText="Enter amount" prefWidth="200.0"/>
                        <Label fx:id="withdrawBalanceLabel" text="Current Balance: $0.00" style="-fx-text-fill: #e67e22; -fx-font-weight: bold;"/>
                    </VBox>
                    <HBox spacing="10.0">
                        <Button fx:id="processWithdrawButton" text="Process Withdrawal" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150;"/>
                        <Button fx:id="backToWelcomeFromWithdraw" text="Back to Welcome" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150;"/>
                    </HBox>
                    <TextArea fx:id="withdrawResultArea" prefHeight="100.0" prefWidth="500.0" editable="false" style="-fx-border-color: #bdc3c7; -fx-padding: 5;"/>
                </VBox>
            </Tab>

            <!-- Transaction History Tab -->
            <Tab text="Transaction History">
                <VBox spacing="15.0">
                    <padding><Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/></padding>
                    <Label text="Transaction History" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <HBox spacing="10.0">
                        <Label text="Select Account:" style="-fx-font-weight: bold;"/>
                        <ComboBox fx:id="historyAccountCombo" prefWidth="200.0"/>
                        <Button fx:id="refreshHistoryButton" text="Refresh" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 100;"/>
                        <Button fx:id="backToWelcomeFromHistory" text="Back to Welcome" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150;"/>
                    </HBox>
                    <TableView fx:id="transactionHistoryTable" prefHeight="300.0" prefWidth="600.0" style="-fx-border-color: #bdc3c7;">
                        <columns>
                            <TableColumn prefWidth="100.0" text="Date"/>
                            <TableColumn prefWidth="80.0" text="Type"/>
                            <TableColumn prefWidth="150.0" text="Description"/>
                            <TableColumn prefWidth="100.0" text="Amount"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>